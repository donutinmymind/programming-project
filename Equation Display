loop = True
equationstack = []
def outputequationstack(samplestack):
    global currentequation
    currentequation = ""
    for i in range( len(samplestack)):
        currentequation = currentequation + str(samplestack[i])
    try:
        ans=eval(currentequation)
        print(ans)
    except:
        pass
    return currentequation
def undo(samplestack):
    if len(samplestack) > 0:
        equationstack.pop()
equationstack = []
while loop:
    placeholderinput = input("Enter a number/symbol ")
    if placeholderinput =="x":
        undo(equationstack)
    else:
        equationstack.append(placeholderinput)
    output = outputequationstack(equationstack)
    print(output)
